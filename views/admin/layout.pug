doctype html
html(lang='en')
    head
      // Required meta tags
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
      title  #{title}
      // plugins:css
      link(rel='stylesheet', href='/admin/vendor/mdi/css/materialdesignicons.min.css')
      link(rel='stylesheet', href='/admin/vendor/base/vendor.bundle.base.css')
      // endinject
      // plugin css for this page
      link(rel='stylesheet', href='/admin/vendor/datatables.net-bs4/dataTables.bootstrap4.css')
      // End plugin css for this page
      // inject:css
      link(rel='stylesheet', href='/admin/css/style.css')
      // endinject
    body
      .container-scroller
        // partial:partials/_navbar.html
        nav.navbar.col-lg-12.col-12.p-0.fixed-top.d-flex.flex-row
          .navbar-brand-wrapper.d-flex.justify-content-center
            .navbar-brand-inner-wrapper.d-flex.justify-content-between.align-items-center.w-100
              a.navbar-brand.brand-logo(href='/admin')
                //- img(src='images/logo.svg', alt='logo')
                | MiddleField
              a.navbar-brand.brand-logo-mini(href='/admin')
                img(src='images/logo-mini.svg', alt='logo')
              button.navbar-toggler.navbar-toggler.align-self-center(type='button', data-toggle='minimize')
                span.mdi.mdi-sort-variant
          .navbar-menu-wrapper.d-flex.align-items-center.justify-content-end
            ul.navbar-nav.mr-lg-4.w-100
              li.nav-item.nav-search.d-none.d-lg-block.w-100
                .input-group
                  .input-group-prepend
                    span#search.input-group-text
                      i.mdi.mdi-magnify
                  input.form-control(type='text', placeholder='Search now', aria-label='search', aria-describedby='search')
            ul.navbar-nav.navbar-nav-right
              li.nav-item.nav-profile.dropdown
                a#profileDropdown.nav-link.dropdown-toggle(href='#', data-toggle='dropdown')
                  span.nav-profile-name Hé lu, #{name}
                .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='profileDropdown')
                  a.dropdown-item(href='/admin/logout')
                    i.mdi.mdi-logout.text-primary
                    |                 Logout
            button.navbar-toggler.navbar-toggler-right.d-lg-none.align-self-center(type='button', data-toggle='offcanvas')
              span.mdi.mdi-menu

        .container-fluid.page-body-wrapper
            // partial:partials/_sidebar.html
            nav#sidebar.sidebar.sidebar-offcanvas
              ul.nav
                li.nav-item
                  a.nav-link(href='/admin')
                    i.mdi.mdi-home.menu-icon
                    span.menu-title Trang chủ
                li.nav-item
                  a.nav-link(data-toggle='collapse', href='#ui-basic', aria-expanded='false', aria-controls='ui-basic')
                    i.mdi.mdi-apps.menu-icon
                    span.menu-title Quản lý
                    i.menu-arrow
                  #ui-basic.collapse
                    ul.nav.flex-column.sub-menu
                      li.nav-item
                        a.nav-link(href='/admin/accounts') Tài khoản
                      li.nav-item
                        a.nav-link(href='/admin/pokemons') Pokémon
                      li.nav-item
                        a.nav-link(href='/admin/cashshops') Cashshop
                      li.nav-item
                        a.nav-link(href='/admin/pokestops') Pokéstop
          
            block content