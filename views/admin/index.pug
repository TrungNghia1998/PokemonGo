            .card-body
              p.card-title Biểu đồ doanh thu tuần này
              //- #cash-deposits-chart-legend.d-flex.justify-content-center.pt-3
              #chartContainer(style="height: 370px; width: 100%;")

      .row
        .col-md-12.stretch-card
          .card
            .card-body
              p.card-title Giao dịch gần đây
              .table-responsive
                table#recent-purchases-listing.table
                  thead
                    tr
                      th Tên tài khoản
                      th Chủ tài khoản
                      th Hình thức giao dịch
                      th Giá trị
                      th Ngày giao dịch
                  tbody
                    each e, index in data
                      if (data.length-10 < index)
                        tr
                          td #{e.accountid.username}
                          td #{e.accountid.fullname}
                          td #{e.method}
                          td #{e.amount}
                          td #{e.date_formatted}
